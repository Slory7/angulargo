{
    "version": "2.0.0",
    "type": "shell",
    "command": "go",
    "echoCommand": true,
    "options": {
        "cwd": "${fileDirname}",
    },
    "tasks": [
        {
            "label": "build",
            "command": "go build",
            "args": [
                "-x"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "go test",
            "args": [
                "test"
            ],
            "group": "test"
        }
    ]
}